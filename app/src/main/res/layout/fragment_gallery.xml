<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TableRow>
            <Button
                android:id="@+id/load_compound_view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Compound" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/load_facilities_view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Facilities" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/load_floorplans_view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Floor Plans" />
        </TableRow>
    </TableLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/photo_view1"
                android:layout_width="600dp"
                android:layout_height="300dp"
                android:background="@android:color/black"
                />
            <ImageView
                android:id="@+id/photo_view2"
                android:layout_width="600dp"
                android:layout_height="300dp"
                android:background="@android:color/black"
                />
            <ImageView
                android:id="@+id/photo_view3"
                android:layout_width="600dp"
                android:layout_height="300dp"
                android:background="@android:color/black"
                />
            <ImageView
                android:id="@+id/photo_view4"
                android:layout_width="600dp"
                android:layout_height="300dp"
                android:background="@android:color/black"
                />
            <ImageView
                android:id="@+id/photo_view5"
                android:layout_width="600dp"
                android:layout_height="300dp"
                android:background="@android:color/black"
                />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>